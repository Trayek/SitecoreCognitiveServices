@model Microsoft.ProjectOxford.Vision.Contract.Adult

@if (Model != null)
{
    <div class="detail-box">
        <h3>Adult</h3>
        <div>
            <label>Is Adult Content: </label>
            <span>@Model.IsAdultContent</span>
        </div>
        <div>
            <label>Is Racy Content: </label>
            <span>@Model.IsRacyContent</span>
        </div>
        <div>
            <label>Adult Score: </label>
            <span class="bar-box">
                <div class="bar-value bar-@Model.AdultScore.ToString("0.0").Replace(".", "")"></div>
            </span>
        </div>
        <div>
            <label>Racy Score: </label>
            <span class="bar-box">
                <div class="bar-value bar-@Model.RacyScore.ToString("0.0").Replace(".", "")"></div>
            </span>
        </div>
    </div>
}