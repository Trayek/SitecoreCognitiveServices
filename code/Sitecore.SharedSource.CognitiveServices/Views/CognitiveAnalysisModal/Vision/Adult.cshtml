@using Sitecore.Data.Managers
@model Microsoft.ProjectOxford.Vision.Contract.Adult

@if (Model != null)
{
    <div class="detail-box">
        <h3>Adult</h3>
        <div>
            <label>Adult: </label>
            <span class="bar-box">
                <div class="bar-value bar-@Model.AdultScore.ToString("0.0").Replace(".", "")"></div>
            </span>            
            <span class="tf-icon">
                @if (Model.IsAdultContent)
                {
                    @Html.Raw(ThemeManager.GetImage("Apps/16x16/Right.png", 16, 16))
                }
                else
                {
                    @Html.Raw(ThemeManager.GetImage("Apps/16x16/Wrong.png", 16, 16))
                }
            </span>
        </div>
        <div>
            <label>Racy: </label>
            <span class="bar-box">
                <div class="bar-value bar-@Model.RacyScore.ToString("0.0").Replace(".", "")"></div>
            </span>
            <span class="tf-icon">
                @if (Model.IsRacyContent)
                {
                    @Html.Raw(ThemeManager.GetImage("Apps/16x16/Right.png", 16, 16))
                }
                else
                {
                    @Html.Raw(ThemeManager.GetImage("Apps/16x16/Wrong.png", 16, 16))
                }
            </span>
        </div>
    </div>
}